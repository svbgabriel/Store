extends layout

block topo

  #destaques.carousel.slide(data-ride='carousel')
    // Indicators
    ol.carousel-indicators
      li.active(data-target='#destaques', data-slide-to='0')
      li(data-target='#destaques', data-slide-to='1')
      li(data-target='#destaques', data-slide-to='2')
    // Wrapper for slides
    .carousel-inner(role='listbox')
      .item.active
        img(src='images/01.png', alt='1')
        .carousel-caption 1
      .item
        img(src='images/02.png', alt='2')
        .carousel-caption 2
      .item
        img(src='images/03.png', alt='3')
        .carousel-caption 3
        
    // Controls
    a.left.carousel-control(href='#destaques', role='button', data-slide='prev')
      span.glyphicon.glyphicon-chevron-left(aria-hidden='true')
      span.sr-only Previous
    a.right.carousel-control(href='#destaques', role='button', data-slide='next')
      span.glyphicon.glyphicon-chevron-right(aria-hidden='true')
      span.sr-only Next

