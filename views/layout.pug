doctype html
html
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
    title Store
    link(href="/css/main.css", rel="stylesheet")
  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      a.navbar-brand.pt-0(href="/") Store
      button.navbar-toggler(type="button", data-toggle="collapse", data-target="#navbarSupportedContent", aria-controls="navbarSupportedContent", aria-expanded="false", aria-label="Toggle navigation")
        span.navbar-toggler-icon
        
      .collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          - var obj = { 'produtos':'Produtos' }
          each val, key in obj
            - if (id == key)
                li.nav-item.active
                  a.nav-link(href=key == 'home' ? '/' : '/' + key) #{val}
            - else            
                li.nav-item
                  a.nav-link(href=key == 'home' ? '/' : '/' + key) #{val}
      
        form.form-inline.my-2.my-lg-0(role="search")
          input#procuratxt.form-control.mr-sm-2(type="text", name="busca", placeholder="Procurar")
          button#procurabtn.btn.btn-light.my-2.my-sm-0(type="submit") OK

        ul.navbar-nav.ml-auto
          if session && session.user                
            li.nav-item.dropdown
              a.nav-link.dropdown-toggle(href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false") #{session.nome}
              .dropdown-menu.dropdown-menu-right
                a.dropdown-item(href="/conta") #[i.fas.fa-user] Meus dados
                .dropdown-divider
                a.dropdown-item(href="/conta/sair") #[i.fas.fa-sign-out-alt] Sair
          else
            li.nav-item
              a.nav-link(href="/conta/login") Login
            li.nav-item
              a.nav-link(href="/conta/criar") Cadastre-se
          li#cartinfo.nav-item
            a.nav-link(href="/carrinho")
              i#carticn.fas.fa-shopping-cart.mx-2
              if session.carrinho && session.carrinho.items
                span#cartqty #{session.carrinho.items.length}
              else
                span#cartqty 0
    block topo

    block content

    footer.footer.mt-auto.py-3
      .container
        span.text-muted &copy 2015

    script(src='/javascripts/main.bundle.js')
